
{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [

        {
            "name": "client",
            "image": "krubel/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },

        {
            "name": "server",
            "image": "krubel/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
 
        {
            "name": "worker",
            "image": "krubel/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },

        {
            "name": "nginx",
            "image": "krubel/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ], 
            "links": ["client", "server"],
            "memory": 128
        }



    ]
}